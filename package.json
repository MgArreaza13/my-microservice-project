{
	"name": "my-microservice-project",
	"version": "1.0.0",
	"description": "Microservice project using TypeScript, hexagonal architecture, and best practices.",
	"scripts": {
		"start": "node dist/index.js",
		"build": "tsc",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"dev:local": "ENV=local ts-node-dev --respawn --transpile-only src/index.ts",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
		"prettier": "prettier --write 'src/**/*.{ts,tsx,json,md}'"
	},
	"author": "Miguel Arreaza",
	"license": "MIT",
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.17.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^16.0.0",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^27.2.0",
		"prettier": "^2.4.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.4.3"
	},
	"browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead",
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		]
	}
}
